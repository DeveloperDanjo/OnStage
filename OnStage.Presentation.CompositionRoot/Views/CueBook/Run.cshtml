@model OnStage.Entities.CueBook

@{
    ViewBag.Title = Model.Show.Title + " (" + Model.Name + ")";
    ViewBag.PageId = "cueBookRun";
}

<h2>@Model.Show.Title <small>@Model.Name</small></h2>
@Html.HiddenFor(m => m.Show.Id, new { id = "showId" })
@Html.HiddenFor(m => m.Id, new { id = "cuebookId" })

<div class="row-fluid" id="content-inner">
    <div class="span4 cuelist-container" id="cueList"></div>
    <div class="span8">
        <div id="scriptViewer"></div>
        <div class="row-fluid" id="bottomRow">
            <div class="span6" id="cueDetails"></div>
            <div class="span6"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
    require(['views/CueBook/page']);
</script>