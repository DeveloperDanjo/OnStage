<!DOCTYPE html>
<html>
<head>
    @{ var title = "OnStage" + ((ViewBag.Title != null && ViewBag.Title != "") ? " - " + ViewBag.Title : ""); }
    <meta charset="utf-8" />
    <title>@title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">body { padding-top: 40px; }</style>
    <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    @Html.Assets().Styles.Render()

    <script type="text/javascript" src="@Url.Content("~/Scripts/require.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/requireConfig.js")"></script>
    <script type="text/javascript">
        require(['jquery', 'signalr', 'hubs', 'modernizr', 'bootstrap']);
    </script>
    @Html.Assets().Scripts.Render()
</head>

<body>
    @Html.Partial("_Header")
    <div class="container content" id="@ViewBag.PageId">
        @RenderBody()
    </div>
</body>
</html>
